@import 'nib'

.pull-right
  text-align: right

.pull-left
  text-align: left 

html
  font-family: "Open Sans", Helvetica, Arial, sans-serif;

  body 
    margin: 0

  #background
    width: 100%
    position: absolute
    top: 0
    left: 0
    height: 400px
    z-index: -1

    svg
      background: url(../img/background.jpg) no-repeat 
      background-size: cover
      position: absolute 

      path#background
        fill: rgba(0,0,0,0.5)

      path#white
        fill: #fff

  section
    display: none

    &.active
      display: block

    &:NOT(#classify) > .row
      background: #fff
      border: 1px solid #000

      .column
        padding: 10px 30px
        font-size: 12px

        h2
          margin-top: 0
          color: #45aae3
          font-size: 18px

  .row
    width: 400px
    margin: 5px auto
    box-sizing: border-box

    &.flex
      width: 500px

      .column.full
        width: 400px
        display: block
        margin: 0 auto

    .column
      display: inline-block
      box-sizing: border-box

      &.flex
        display: inline
        width: none

      &.full
        width: 100% 

      &.half
        width: 49%

        &:last-child
          float: right

  .btn
    border: 2px solid #ababab
    border-radius: 3px
    background: #fff
    font-size: 12px
    height: 50px
    box-sizing: border-box
    font-weight: 400
    padding-left: 20px
    padding-right: 20px
    cursor: pointer
    background-image: none
    vertical-align: middle
    text-align: center

    &.circular
      border: 2px solid #fff
      border-radius: 50%
      background: #000
      color: #fff
      width: auto 
      height: auto 
      padding: 20px

      img
        vertical-align: middle

  a.btn
    text-decoration: none
    display: inline-block

    &:hover
      border-color: #45aae3
