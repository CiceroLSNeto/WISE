@import "nib"

.guide
  position: absolute
  top: 0
  left: -300px
  background: rgba(10, 10, 10, 0.9)
  height: 100%
  width: 300px
  color: #fff
  z-index: 5
  transition: transform 0.5s ease-in-out
  overflow-y: auto

  &.active
    transform: translateX(300px)
    
  .example  
    width: 200px
    margin: 10px auto
    font-size: 12px
    position: relative

    canvas
      border: 1px solid #000

    &#good-example
      button
        top: 216px

    button
      position: absolute
      top: 169px 
      width: 30px
      height: 30px
      padding: 0
      left: 3px

      img
        height: 15px
        width: 15px
        position: relative
        top: -1px
        left: 1px

      &.loop
        display: none

      &.pause
        display: none

    .exploded
      display: none

      p
        text-align: center

      &.active
        display: block

      .close-ex
        float: right
        font-size: 10px
        padding-bottom: 10px
        cursor: pointer

        img
          position: relative
          top: 3px

  .close
    float: right
    font-size: 10px
    cursor: pointer
    margin: 20px 10px
    
    img
      position: relative
      top: 3px  

  h3
    margin: 10px
    margin-top: 15px

  h4
    margin: 10px 30px 5px 
    border-bottom: 1px solid #fff

  ul
    width: 200px
    margin-left: 40px
    padding: 0
    list-style-type: none
    font-size: 12px
