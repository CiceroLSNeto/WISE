@import "nib"

nav
  position: absolute
  top: 0
  left: -100%
  background: rgba(10, 10, 10, 0.7)
  height: 100%
  width: 100%
  color: #fff
  text-align: center
  font-size: 30px
  z-index: 3
  transition: transform 0.5s ease-in-out

  &.active
    transform: translateX(100%)

  ul
    width: inherit
    list-style-type: none
    margin-top: 120px
    margin-bottom: 60px
    padding: 0

    a
      text-decoration: none
      color: #fff

      &:hover
        color: #45aae3

  #share 
    h3   
      font-size: 18px
      font-weight: 400
      margin-bottom: 10px

    a
      margin-left: 30px

      &#twitter
        margin-left: 0
