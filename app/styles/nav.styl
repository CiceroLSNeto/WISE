@import "nib"

nav
  position: absolute
  top: 0
  left: 0
  background: rgba(10, 10, 10, 0.9)
  height: 100%
  width: 100%
  color: #fff
  text-align: center
  font-size: 30px
  z-index: -1
  transition: opacity 0.2s ease-in-out
  opacity: 0

  &.active
    z-index: 3
    opacity: 1

    ul
      opacity: 1

    #share
      opacity: 1

  ul
    width: inherit
    list-style-type: none
    margin-top: 120px
    margin-bottom: 60px
    padding: 0
    opacity: 0
    transition: opacity 0.5s ease-in

    a
      text-decoration: none
      color: #fff
      font-weight: 300
      transition: color 0.2s ease-in-out

      &:hover
        color: #45aae3

  #share 
    opacity: 0
    transition: opacity 0.5s ease-in
    h3   
      font-size: 18px
      font-weight: 400
      margin-bottom: 10px

    a
      margin-left: 30px
      padding: 15px

      &#twitter
        margin-left: 0
